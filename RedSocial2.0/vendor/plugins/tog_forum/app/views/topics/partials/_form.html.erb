<div class="fields">
  <p>
    <label for="forum_topic_title"><%= I18n.t('tog_forum.model.title') %></label>
    <%= f.text_field :title, :class=>"fieldbox", :size => 35 %>
  </p>
  <p>
    <label for="forum_topic_body"><%= I18n.t('tog_forum.model.body') %></label>
    <%= f.text_area :body, :class => 'fieldbox', :size => '60x10' %>
  </p>
  <p>
    <label for="forum_topic_sticky"><%= I18n.t('tog_forum.model.sticky') %>?</label>
    <%= f.check_box :sticky, :class => 'fieldbox' %>
  </p>
  <p>
    <label for="forum_topic_locked"><%= I18n.t('tog_forum.model.locked') %>?</label>
    <%= f.check_box :locked, :class => 'fieldbox' %>
  </p>
</div>

