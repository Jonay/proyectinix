<tr>
  <td><%= link_to topic.title, forum_topic_url(:forum_id => @forum.id, :id => topic.id) %></td>
  <td align="center"><%= topic.posts_count %></td>
  <td><%= link_to topic.user.login, profile_url(topic.user) %></td>
  <td><%= topic.updated_at.to_formatted_s(:db) %></td>
  <td align="center">
  	<%= link_to image_tag("/tog_core/images/ico/delete.gif", :border => 0, :title => "Eliminar tema"), forum_topic_url(:forum_id => @forum.id, :id => topic.id), :confirm => "Estás seguro¿?", :method => :delete %>
  </td>
</tr>

