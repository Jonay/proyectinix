<!--Portlet para mostrar los blogs del grupo actual-->
<div class="portlet portletL" id="portlet_blogs_group">
    <h2><span><%= I18n.t('tog_social.groups.site.blogs') %></span></h2>
	<!--Buscamos en la tabla blogs los blogs que tenga id_referencia igual a la id del grupo actual
	    y que sea del tipo grupo-->
	<%@blogs = Blog.find(:all, :conditions => {:id_referencia => @group.id, :tipo => 'Grupo'}) -%>
    <%@order = params[:order] || 'created_at'
      @page = params[:blog_page]
      @asc = params[:asc] || 'desc'    
      @blogs = @blogs.paginate  :per_page => 2,
                                :page => @page,
                                :order => @order + " " + @asc %>
	
	<div class="portlet_content">
        <ul>
        	<!--Si hay blogs-->
        	<% if @blogs.length > 0 %>
			<!-- los recorremos todos y para cada uno mostramos un enlace al blog y cuando fue creado-->
              <% @blogs.each do |blog| -%>
                <li class="clearfix">
              	  <div class="image left"><img src="/images/small_blog.png?"></div>
			      <div class="title"><%= link_to "#{sanitize textilize(blog.title)}", conversatio_blog_path(blog), :title => "#{sanitize(blog.title)}" %></div>
                  <div class="text"><%= I18n.t('tog_social.groups.model.created_at') %> <%=I18n.l(blog.created_at, :format => :long)%></div>
                </li> 
              <% end -%>
			  <!--Paginamos los blogs en el el portlet-->
			  <span class="pages_navigation left">
			  	<%= will_paginate @blogs, :param_name => 'blog_page' %>
			  </span>
			  <!--Link para ver todos los blogs del grupo-->
			  <div class="image right"><%= link_to I18n.t('tog_social.groups.model.view_all_blogs'), blogs_groups_path(@group) %></div>	
			  		  
			<!--sino habÃ­a blogs lo indicamos mediante un mensaje.-->
			<% else -%>
			  <li class="clearfix">
			    <%= I18n.t('tog_social.groups.model.no_blogs_for_this_group') %>
			  </li>
			<% end -%>   
        </ul> 
    </div>    
</div> <!-- /.portlet_blogs_group -->

						   