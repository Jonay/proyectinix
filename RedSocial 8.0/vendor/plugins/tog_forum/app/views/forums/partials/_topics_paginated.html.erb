<thead>
	<tr>
		<th scope="col">
			<%= link_to_remote "Tema", { :url => forum_path({:forum => @forum, :order => "title", :page => @page, :asc => @asc}), :method => :get, :update => "topics_paginated" } %>
		</th>
		<th scope="col">
			Respuestas
		</th>
		<th scope="col">
			<%= link_to_remote "Autor", { :url => forum_path({:forum => @forum, :order => "user_id", :page => @page, :asc => @asc}), :method => :get, :update => "topics_paginated" } %>
		</th>
		<th scope="col">
